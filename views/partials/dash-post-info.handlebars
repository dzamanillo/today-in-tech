<article class="container d-flex flex-column">
	<div class="d-flex justify-content-between align-items-center">
		<div>
			<h2>{{title}}</h2>
			<h3>Created on {{format_date createdAt}}</h3>

			<p>{{post_content}}</p>
	
	</div>
	<div>
		<button class="btn btn-success">Edit</button>
		<button onclick="deleteFormHandler()" class="btn btn-danger delete-post-btn" data-post-id="{{id}}">Delete</button>
	</div>
</article>