{{> header}}
<main>
	<div class="card border-success p-2 dash-card login-signup-card ">
	<form action="/api/users/login/" method="POST" class="d-flex flex-column align-items-end m-3">
		<div class="d-flex flex-column align-content-center align-items-center align-self-center">
            <h2 class="display-2">Login</h2>

			{{#if error}}
			<p class="text-danger">Incorrect Username or Password</p>
			{{/if}}

            <div class="login-username d-flex mt-2">
                <label for="username">Username: </label>
                <input type="text" id="username" name="username" />
            </div>
            <div class="login-password d-flex mt-2">
                <label for="password">Password: </label>
                <input type="password" id="password" name="password" />
            </div>
        </div>
		<div class="login-btn align-self-center mt-5">
			<button class="btn btn-success" id="btn-login">Login</button>
		</div>
	</form>

	<div class="d-flex flex-column mt-2 justify-content-center align-items-center">
		<p>New to our site?</p>
        
		<a href="/signup" id="link-signup"> Sign Up Here</a>

	</div>
</div>	

</main>