{{> header}}
<main>
	<div class="card border-success p-2 dash-card login-signup-card ">
	<form action="/users" method="POST" class="d-flex flex-column align-items-end m-3">
		<div class="d-flex flex-column align-content-center align-items-center align-self-center">
            <h2 class="display-2">Sign Up</h2>
            <div class="login-username d-flex mt-2">
                <label for="username">Username: </label>
                <input type="text" id="username" name="user_name" />
            </div>
            <div class="login-email d-flex mt-2">
                <label for="email">Email: </label>
                <input type="text" id="email" name="email" />
            </div>
            <div class="login-password d-flex mt-2">
                <label for="password">Password: </label>
                <input type="password" id="password" name="password" />
            </div>
        </div>
		<div class="login-btn align-self-center mt-5">
			<button class="btn btn-success" id="btn-login">Login</button>
		</div>
	</form>

	<div class="d-flex flex-column mt-2 justify-content-center align-items-center">
		<p>Already have an account?</p>
        
		<a href="/login" id="link-login"> Login Here</a>

	</div>
</div>	

</main>