{{> header}}
<main>
	<div class="card border-success p-2 dash-card login-signup-card ">
	<form action="/api/users" method="POST" class="d-flex flex-column align-items-end m-3">
		<div class="d-flex flex-column align-content-center align-items-center align-self-center">
            <h2 class="display-2">Sign Up</h2>
            <div class="row align-items-center">
                <div class="d-flex flex-column col-4">
                    <label class="mb-2" for="username">Username: </label>
                    <label class="mb-2" for="email">Email: </label>
                    <label class="mb-2" for="password">Password: </label>
                </div>
                <div class="d-flex flex-column col-8">
                    <input class="mb-2" type="text" id="username" name="username" />
                    <input class="mb-2" type="text" id="email" name="email" />
                    <input class="mb-2" type="password" id="password" name="password" />
                </div>

            </div>
		<div class="login-btn align-self-center mt-5">
			<button class="btn btn-success" id="btn-login">Sign Up</button>
		</div>
        </div>
	</form>

	<div class="d-flex flex-column mt-2 justify-content-center align-items-center">
		<p>Already have an account?</p>
        
		<a href="/login" id="link-login"> Login Here</a>

	</div>
</div>	

</main>